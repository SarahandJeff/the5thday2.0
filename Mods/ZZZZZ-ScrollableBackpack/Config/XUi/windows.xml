<config>
	
	<!-- ********************************* -->
	<!-- // Backpack Storage Window -->
	<setattribute xpath="/windows/window[@name='windowBackpack']" name="depth">1</setattribute>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/button[@name='btnSort']/@pos">250,-137</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/button[@name='btnSort']/@depth">8</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/button[@name='btnSort']/@style">icon32px_rollover</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnMoveFillAndSmart' or @name='btnMoveQuickRestock']/@pos">260,-201</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnMoveFillAndSmart' or @name='btnMoveQuickRestock']/@depth">8</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnMoveFillAndSmart' or @name='btnMoveQuickRestock']/@style">icon32px_rollover</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnMoveAll' or @name='btnMoveQuickStack']/@pos">260,-245</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnMoveAll' or @name='btnMoveQuickStack']/@depth">8</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnMoveAll' or @name='btnMoveQuickStack']/@style">icon32px_rollover</set>
		<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/rect/button[@name='btnMoveFillAndSmart']/@pos">210,-201</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/rect/button[@name='btnMoveFillAndSmart']/@depth">8</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/rect/button[@name='btnMoveFillAndSmart']/@style">icon32px_rollover</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/rect/button[@name='btnMoveAll']/@pos">210,-245</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/rect/button[@name='btnMoveAll']/@depth">8</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/rect/button[@name='btnMoveAll']/@style">icon32px_rollover</set>
<!--	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnClearInventory']/@pos">-155, -22</set>-->
	
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']//button[@name='btnToggleLockMode']/@pos">255, -77</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']/button[@name='btnToggleLockMode']/@depth">8</set>
	<!-- <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/@pos">0,-46</set> -->
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/sprite[@name='backgroundMain']/@height">650</set> <!-- 336 -->
	
	<append xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']">
		<rect name="ss_search" depth="5" pos="-115,-7" width="200" height="35">
			<rect pos="0,0" width="200">
				<!-- <sprite name="searchIcon" depth="4" pos="20,-20" size="40,40" sprite="ui_game_symbol_search" pivot="center" color="[ss_style_element_iconcolor_1]" globalopacitymod="1.2" /> -->
				<sprite name="searchInputFrame" depth="1" pos="48,3" width="154" height="35" sprite="menu_empty2px" type="sliced" fillcenter="false" color="[ss_style_element_input_frame]" globalopacity="true" />
				<textfield name="searchInput" depth="2" pos="50,1" width="150" height="31" search_field="true" virtual_keyboard_prompt="vkPromptSearchTerm" close_group_on_tab="true" clear_button="true" />
			</rect>
		</rect>
	</append>
	
	<!--  -->
	<remove xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']"/>
	<append xpath="/windows/window[@name='windowBackpack']/panel[@name='content']">
		<!-- <sprite depth="0" name="backgroundshade" pos="0,0" width="550" height="336" color="[black]" type="sliced" globalopacity="true" /> -->
		<!-- <sprite depth="1" name="scrollbarBackground" sprite="menu_empty3px" pos="552,-168" height="333" width="14" color="[ss_style_scrollbar_background]" pivot="center" type="sliced" fillcenter="true" globalopacity="true"/> -->
		<scrollbar	name="scrollbar"
							depth="6"
							pos="442,-250"
							width="14"
							height="500"
							padding="4"
							foregroundname="handler"
							backgroundname="background"
							globalopacity="true">
			<button name="handler" sprite="menu_empty3px" pivot="center" hovercolor="[ss_style_scrollbar_handler_hover]" color="[ss_style_scrollbar_handler]" defaultcolor="[ss_style_scrollbar_handler]" hoverscale="1" type="sliced" fillcenter="true" />
			<button name="background" sprite="quartz_scrollbar_background" pivot="center" hovercolor="[ss_style_scrollbar_background_hover]" defaultcolor="[ss_style_scrollbar_background]" hoverscale="1" sound_play_on_press_down="[paging_click]" color="[ss_style_scrollbar_background]" />
		</scrollbar>
		<scrollview name="scrollview" depth="5" pos="0,0" width="546" height="600" scrollbar="scrollbar" reset_position="true" over_scroll="false" scroll_speed="2.5">
			<grid depth="10" name="inventory" pos="3,-35" height="600" rows="9" cols="5" cell_width="60" cell_height="60" controller="Quartz.Backpack, Quartz" repeat_content="true" >
				<backpack_item_stack name="0" cell_width="60" cell_height="60"/>
			</grid>
		</scrollview>
		<rect name="rightsidecontent" pos="0,0" >
			<sprite depth="1" name="rightsideBackground" pos="458,0" height="600" width="48" color="[mediumGrey]" type="sliced"/>
		</rect>
	</append>
	
	<!-- // Backpack Storage Window Conversion -->
	<!-- Default: 9,5 >45 slot< -->
	<!-- 8,25 >200 slot< -->
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/scrollview[@name='scrollview']/grid[@name='inventory']/@rows">35</set>
	<set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/scrollview[@name='scrollview']/grid[@name='inventory']/@cols">7</set>
	<!-- ********************************* -->
	
	
	<!-- ********************************* -->
	<!-- // Looting Storage Window -->
	<!-- // Looting Storage Window Conversion -->
	<set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@rows">45</set>
	<set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@cols">7</set>
	<!-- ********************************* -->
	
	
</config>