<?xml version="1.0" encoding="UTF-8"?>

<configs>
    <append xpath="/Sounds">

        <SoundDataNode name="HOHAirDropPlane">
            <AudioSource name="Sounds/AudioSource_Distant"/>
            <AudioClip ClipName="Sounds/SupplyDrops/Supply_Crate_Plane_lp"/>
            <distantfadestart name="10"/>
            <distantfadeend name="20"/>
            <LocalCrouchVolumeScale value="0.5"/>
            <CrouchNoiseScale value="0.5"/>
            <NoiseScale value="1"/>
            <MaxVoices value="3"/>
            <MaxRepeatRate value="0.001"/>
        </SoundDataNode>

        <SoundDataNode name="HOHAirDropRadio">
            <AudioSource name="Sounds/AudioSource_UseAction"/>
            <NetworkAudioSource name="Sounds/AudioSource_UseAction"/>
            <AudioClip ClipName="Sounds/TriggeredEvents/alarm_house_biz_lp1" Loop="false"/>
            <AudioClip ClipName="Sounds/TriggeredEvents/alarm_house_biz_lp2" Loop="false"/>
            <AudioClip ClipName="Sounds/TriggeredEvents/alarm_house_biz_lp3" Loop="false"/>
            
            <LocalCrouchVolumeScale value="1"/>
            <CrouchNoiseScale value="1"/>
            <NoiseScale value="1"/>
            <MaxVoices value="10"/>
            <MaxRepeatRate value="0.001"/>
        </SoundDataNode>

	</append>
</configs>
