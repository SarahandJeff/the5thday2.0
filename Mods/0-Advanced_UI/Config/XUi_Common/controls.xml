<controls>

<append xpath="/controls">

<windowBackground><!-- Sizeable + height = 16 /// non globalopacitymod="1.8" -->
	<rect name="background_design" width="${width}" height="${height}" pos="${pos}" depth="${depth}">
		<!-- Header -->
		<sprite depth="-2" name="backgroundHeader" pos="0,0" width="${width}" height="43" type="sliced"  color="[AXHeaderBackgroundP]" fillcenter="true" />
		<sprite depth="-2" name="backgroundLine" pos="8,8" width="${width-16}" height="8" type="sliced"  color="[AXWindowCorner]" />
		<!-- <sprite depth="-1" name="backgroundBlackLine" pos="0,0" sprite="ui_interface_gradient_strip" width="${width}" height="12" type="sliced"  color="0,0,0,255" /> -->
		<!-- <sprite depth="-1" name="backgroundBlackLineA" pos="0,-31" sprite="ui_interface_gradient_strip" width="${width}" height="12" type="sliced" color="0,0,0,255" /> -->
		<!-- Corner Top -->
		<sprite depth="-2" name="backgroundCL" pos="0,8" sprite="ui_game_symbol_triangle" flip="Horizontally" width="8" height="8" type="sliced"  color="[AXWindowCorner]"/>
		<sprite depth="-2" name="backgroundCR" pos="${width-8},8" sprite="ui_game_symbol_triangle" width="8" height="8" type="sliced"  color="[AXWindowCorner]"/>
		<!-- Background -->
		<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="0,0" width="${width}" height="${height}" color="[AXWindowLine]" type="sliced" fillcenter="false" />
		<sprite depth="-3" name="backgroundw" pos="0,0" width="${width}" height="${height}" type="sliced"  color="[AXWindowBackground]" />	
		<sprite depth="-2" name="backgroundLineB" pos="8,${-height}" width="${width-16}" height="8" type="sliced"  color="[AXWindowCorner]" fillcenter="true" />
		<!-- <sprite depth="-1" name="backgroundBlackLineB" pos="0,${-height+12}" sprite="ui_interface_gradient_strip" flip="Vertically" width="${width}" height="12" type="sliced"  color="0,0,0,255" /> -->
		<!-- Corner Down -->
		<sprite depth="-2" name="backgroundCLB" pos="8,${-height}" rotation="-90" sprite="ui_game_symbol_triangle" flip="Vertically" width="8" height="8" type="sliced"  color="[AXWindowCorner]"/>
		<sprite depth="-2" name="backgroundCRB" pos="${width-8},${-height}" sprite="ui_game_symbol_triangle" flip="Vertically" width="8" height="8" type="sliced"  color="[AXWindowCorner]"/>				
	</rect>
</windowBackground>

<OnlyHeader><!-- Sizeable + height = 16 /// non globalopacitymod="1.8" Header = 26 -->
	<rect name="background_design" width="${width}" height="${height}" pos="${pos}" depth="${depth}">
		<!-- Header -->
		<sprite depth="-2" name="backgroundHeader" pos="0,0" width="${width}" height="26" type="sliced"  color="[AXHeaderBackgroundPAlpha]" fillcenter="true" />
		<sprite depth="-2" name="backgroundLine" pos="8,8" width="${width-16}" height="8" type="sliced"  color="[AXWindowCornerAlpha]" />
		<sprite depth="-2" name="backgroundCL" pos="0,8" sprite="ui_game_symbol_triangle" flip="Horizontally" width="8" height="8" type="sliced"  color="[AXWindowCornerAlpha]"/>
		<sprite depth="-2" name="backgroundCR" pos="${width-8},8" sprite="ui_game_symbol_triangle" width="8" height="8" type="sliced"  color="[AXWindowCornerAlpha]"/>
		<!-- Background -->
		<sprite depth="2" name="backgroundMain" sprite="menu_empty3px" pos="0,0" width="${width}" height="${height}" color="[AXWindowLineAlpha]" type="sliced" fillcenter="false" />
		<sprite depth="-3" name="backgroundw" pos="0,0" width="${width}" height="${height}" type="sliced"  color="[AXWindowBackgroundAlpha]" />	
		<sprite depth="-2" name="backgroundLineB" pos="8,${-height}" width="${width-16}" height="8" type="sliced"  color="[AXWindowCornerAlpha]" fillcenter="true" />
		<!-- Corner Down -->
		<sprite depth="-2" name="backgroundCLB" pos="8,${-height}" rotation="-90" sprite="ui_game_symbol_triangle" flip="Vertically" width="8" height="8" type="sliced"  color="[AXWindowCornerAlpha]"/>
		<sprite depth="-2" name="backgroundCRB" pos="${width-8},${-height}" sprite="ui_game_symbol_triangle" flip="Vertically" width="8" height="8" type="sliced"  color="[AXWindowCornerAlpha]"/>				
	</rect>
</OnlyHeader>

<windowBackgroundNoHeader><!-- Sizeable -->
	<rect name="background_design" width="${width}" height="${height}" pos="${pos}" depth="${depth}">
		<!-- Header -->
		<label name="windowTitle" width="200" height="18" pos="5,-4" text_key="${text_key}" />
		<sprite depth="-2" name="backgroundHeader" pos="0,0" width="${width}" height="25" type="sliced"  color="[AXWindowCorner]" fillcenter="true" />
		<!-- Background -->
		<sprite depth="-1" name="backgroundMain" sprite="menu_empty3px" pos="0,0" width="${width}" height="${height}" color="[black]" type="sliced" fillcenter="false" />
		<sprite depth="-3" name="backgroundw" pos="1,-1" width="${width-2}" height="${height-2}" type="sliced"  color="[darkGrey]" />					
	</rect>
</windowBackgroundNoHeader>

</append>

</controls>
