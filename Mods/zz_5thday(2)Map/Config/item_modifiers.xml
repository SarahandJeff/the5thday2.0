<snj>
<append xpath="/item_modifiers">
	<item_modifier name="modGPS" installable_tags="armorHands" modifier_tags="GPS" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster" param1="CustomIcon"/>
        <property name="UnlockedBy" value="perkHOHOlympics"/>
        
            <property name="TraderStageTemplate" value="modsTier2"/>
            <property name="Material" value="Msteel"/>

            <effect_group>
	                <triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="GPSTrackerActivate"/>
		            <triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" buff="GPSTrackerActivate"/>
            </effect_group>
	</item_modifier>
    <item_modifier name="modWatch" installable_tags="armorHands" modifier_tags="watch" blocked_tags="noMods" type="attachment">
            <property name="Extends" value="modGeneralMaster" param1="CustomIcon"/>
            
        <!--<property name="UnlockedBy" value="modArmorWaterPurifierSchematic"/>-->
            <property name="TraderStageTemplate" value="modsTier2"/>
            <property name="Material" value="Msteel"/>

            <effect_group>
	                <triggered_effect trigger="onSelfEquipStart" action="AddBuff" buff="WatchTrackerActivate"/>
		            <triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" buff="WatchTrackerActivate"/>
            </effect_group>
	</item_modifier>

    </append>
</snj>