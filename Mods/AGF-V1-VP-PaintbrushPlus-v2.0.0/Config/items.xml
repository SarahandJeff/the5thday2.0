<AGFVanillaPlus-PaintbrushPlus>


<!--Better Painting!!!-->
		<!--No Paint Required-->
		<append xpath="/items/item[@name='meleeToolPaintTool']/property[@class='Action1']">
			<property name="Infinite_ammo" value="true"/>	
		</append>
		
		<!--Hold trigger down to keep painting-->	
		<append xpath="/items/item[@name='meleeToolPaintTool']/effect_group">
			<passive_effect name="BurstRoundCount" operation="base_set" value="1000"/>
		</append>	
		<set xpath="/items/item[@name='meleeToolPaintTool']/property[@class='Action0']/property[@name='Delay']/@value">.3</set>
		<set xpath="/items/item[@name='meleeToolPaintTool']/property[@class='Action1']/property[@name='Delay']/@value">.3</set>
		
		<!--Short Paint distance to focus on areas within reach vs randomly painting a wall way over there on accident...-->
		<set xpath="/items/item[@name='meleeToolPaintTool']/property[@class='Action0']/property[@name='Range']/@value">6</set>
		<set xpath="/items/item[@name='meleeToolPaintTool']/property[@class='Action1']/property[@name='Range']/@value">6</set>



</AGFVanillaPlus-PaintbrushPlus>