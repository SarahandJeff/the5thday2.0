<configs>

<append xpath="/ui_display_info/item_display">

<!-- Iodide PILLS RESISTANCE -->
		<item_display_info display_type="IodidePillsResist" display_group="groupConsumables">
			<display_entry name="dRadiationResist" title_key="statIodidePillsResist" display_type="Percent"/>
			<display_entry name="dDuration" title_key="statDuration" display_type="Time"/>
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="dSideEffects" title_key="statSideEffects" display_type="Percent"/>
		</item_display_info>


<!-- HAZMAT SUIT -->
		<item_display_info display_type="HazmatT1" display_group="groupAttire">
			<display_entry name="HypothermalResist" display_type="Decimal1" title_key="statHypothermalResist"/>
			<display_entry name="HyperthermalResist" display_type="Decimal1" title_key="statHyperthermalResist"/>
			<display_entry name="Mobility" title_key="statMobility" display_type="Percent" show_inverted="true"/>
			<display_entry name="dNoiseMultiplier" title_key="statNoiseIncrease" display_type="Percent" negative_preferred="false"/>
			<display_entry name="dRadiationResist" title_key="statRadiationResist" display_type="Percent" show_inverted="false"/>
			<display_entry name="dToxicResist" title_key="statToxicResist" display_type="Percent"/>
		</item_display_info>


<!-- RADIUM MODS -->
		<item_display_info display_type="HazmatT2" display_group="modAttire">
			<display_entry name="HypothermalResist" display_type="Decimal1" title_key="statHypothermalResist"/>
			<display_entry name="dRadiationResist" display_type="Percent" title_key="statRadiationResist" show_inverted="false"/>
		</item_display_info>


<!-- HEAT MOD -->
		<item_display_info display_type="HeatMod" display_group="modAttire">
			<display_entry name="dHeatResist" display_type="Percent" title_key="statHeatResist" show_inverted="false"/>
		</item_display_info>


<!-- COLD MOD -->
		<item_display_info display_type="ColdMod" display_group="modAttire">
			<display_entry name="dColdResist" display_type="Percent" title_key="statColdResist" show_inverted="false"/>
		</item_display_info>
</append>


<!-- DRUG SIDE EFFECTS -->
	<append xpath="//item_display_info[@display_type='drugSteroids']">
		<display_entry name="dSideEffects" title_key="statSideEffects" display_type="Percent"/>
	</append>

	<append xpath="//item_display_info[@display_type='medicalPainkillers']">
		<display_entry name="dSideEffects" title_key="statSideEffects" display_type="Percent"/>
	</append>

	<append xpath="//item_display_info[@display_type='medicalVitamins']">
		<display_entry name="dSideEffects" title_key="statSideEffects" display_type="Percent"/>
	</append>

	<append xpath="//item_display_info[@display_type='drugFortBites']">
		<display_entry name="dSideEffects" title_key="statSideEffects" display_type="Percent"/>
	</append>

	<append xpath="//item_display_info[@display_type='drugRecog']">
		<display_entry name="dSideEffects" title_key="statSideEffects" display_type="Percent"/>
	</append>

	<append xpath="//item_display_info[@display_type='cureInfection']">
		<display_entry name="dSideEffects" title_key="statSideEffects" display_type="Percent"/>
	</append>

</configs>